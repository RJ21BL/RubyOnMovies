<h1>Add Movies</h1>

<%= form_for @movie do |f| %>
  <%= f.label('Title') %>
  <%= f.text_field(:title) %>
    <p>
  <%= f.label('Year') %>
  <%= f.text_field(:year) %>
    <p>
  <%= f.fields_for :directors do |d| %>
    <%= d.label('Director') %>
    <%= d.text_field(:name) %>
      <p>
    <%= d.submit('Add Movie')%>
  <% end %> 
<% end %> 
